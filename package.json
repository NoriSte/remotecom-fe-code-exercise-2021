{
  "name": "fe-code-exercise",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@xstate/react": "1.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "styled-components": "^5.2.1",
    "styled-normalize": "^8.0.7",
    "web-vitals": "^0.2.4",
    "xstate": "4.22.0"
  },
  "engines": {
    "node": ">=15.10.x",
    "npm": "7.x"
  },
  "scripts": {
    "// SETUP ////////////////////////////////////////////": "",
    "postinstall": "npm run seed-db",
    "// DEV //////////////////////////////////////////////": "",
    "start": "concurrently \"npm run server\" \"react-scripts start\"",
    "start:frontend": "react-scripts start",
    "cy:open": "cypress open",
    "// BUILD ////////////////////////////////////////////": "",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "// TESTS ////////////////////////////////////////////": "",
    "test": "npm run test:unit -- --watchAll=false && start-server-and-test start:frontend http://localhost:3000 test:e2e",
    "test:unit": "react-scripts test",
    "test:e2e": "npm run cy:run",
    "cy:run": "cypress run",
    "// SERVER ///////////////////////////////////////////": "",
    "seed-db": "node src/server/initJsonDb",
    "server": "json-server --watch --port 4002 --delay 1500 src/server/db.json"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier",
      "prettier/react"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/cypress": "^8.0.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.8.3",
    "concurrently": "^5.3.0",
    "cypress": "^8.3.1",
    "eslint": "^7.32.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "json-server": "^0.16.3",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.13.1"
  }
}
